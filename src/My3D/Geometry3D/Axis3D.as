package My3D.Geometry3D {
	
	public class Axis3D {
		
		public function Axis3D(xAxis:Number = 0, yAxis:Number = 0, zAxis:Number = 0) {
			this.xAxis = xAxis;
			this.yAxis = yAxis;
			this.zAxis = zAxis;
		}

		// The three original coordinates.
		public var xAxis:Number = 0;
		public var yAxis:Number = 0;
		public var zAxis:Number = 0;

	}
	
}